<% layout('layout/boilerplate') -%>

  <div class="container">

    <nav class="navbar mb-5 sticky navbar-expand-lg expand-md navbar-light bg-light">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/likelist/new">Add New Like</a>
            </li>
          </ul>
          <form class="d-flex">
          </form>
        </div>
      </div>
    </nav>

    <div class="row g-5 align-items-center">
      <%= locals.message %>
        <% for (let l of likeList) { %>

          <div class="listcard border-bottom col-lg-4 col-md-6 col-sm-12">
            <div class="card-img">
              <a href="/likelist/<%=l.id%>"><img src="<%=l.urlToImage%>" class="card-img-top" alt="like-image"></a>
            </div>

            <div class="row card-box pt-3">
              <div class="col-8">
                <button type="button" class="btn btn-secondary">
                  <%=l.category%>
                </button>
              </div>
              <div class="col-4">
                <p class="text-right">
                  <%=l.rating%>/5
                </p>
              </div>
            </div>

            <div class="card-body">
              <h3 class="card-title text-truncate">
                <%=l.like%>
              </h3>
              <p class="card-text line-clamp-4">
                <%=l.description%>
              </p>
            </div>

            <div class="row card-box">
              <div class="col-4">
                <p class="text-muted text-truncate"><em>
                    <%=l.date%>
                  </em></p>
              </div>
              <div class="col-4">
                <a href="<%=l.url%>">Go to Website</a>
              </div>
              <div class="col-4">
                <a href="/likelist/edit/<%=l.id%>">Edit Entry</a>
              </div>
            </div>
          </div>
          <% } %>
    </div>
  </div>